<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bottom_sheet_dialog_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_dialog_toolbar">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.08"
            android:padding="15dp"
            android:text=""
            android:textSize="30sp"
            android:fontFamily="@font/baskinrobbins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/bdr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_gravity="right|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/bottom_sheet_dialog_exit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_dialog_text">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.5"
            android:text="내용"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:fontFamily="@font/mm" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/clickbutton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:drawableLeft="@drawable/bottom_sheet_dialog_done"
        android:text="Done!"
        android:textColor="#29A0FF"
        android:fontFamily="@font/pil"
        android:background="@drawable/bottom_sheet_dialog_button"/>
</LinearLayout>